{
    "name": "laminas-api-tools/api-tools-rpc",
    "description": "Laminas Module for simplifying the creation of RPC services",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "api-tools",
        "module",
        "rpc"
    ],
    "homepage": "https://api-tools.getlaminas.org",
    "support": {
        "docs": "https://api-tools.getlaminas.org/documentation",
        "issues": "https://github.com/laminas-api-tools/api-tools-rpc/issues",
        "source": "https://github.com/laminas-api-tools/api-tools-rpc",
        "rss": "https://github.com/laminas-api-tools/api-tools-rpc/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laminas": {
            "module": "Laminas\\ApiTools\\Rpc"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/eimkua1/api-tools-api-problem.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/eimkua1/api-tools-content-negotiation.git"
        }
    ],
    "require": {
        "php": "^7.3 || ~8.0.0",
        "laminas-api-tools/api-tools-api-problem": "^1.3.0",
        "laminas-api-tools/api-tools-content-negotiation": "^1.5.0",
        "laminas/laminas-eventmanager": "^3.3",
        "laminas/laminas-http": "^2.14",
        "laminas/laminas-mvc": "^3.2",
        "laminas/laminas-servicemanager": "^3.6",
        "laminas/laminas-stdlib": "^3.3",
        "laminas/laminas-view": "^2.12",
        "laminas/laminas-zendframework-bridge": "^1.2"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Laminas\\ApiTools\\Rpc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\ApiTools\\Rpc\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "replace": {
        "zfcampus/zf-rpc": "^1.4.2"
    }
}
